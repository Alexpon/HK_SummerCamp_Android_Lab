<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pre_map_info" >
        <SwitchPreference
            android:defaultValue="true"
            android:key="food"
            android:summary="顯示附近美食"
            android:title="美食" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="place"
            android:summary="顯示附近景點"
            android:title="景點" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="bicycle"
            android:summary="顯示附近租車行"
            android:title="自行車行" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pre_map_control" >
        <SwitchPreference
            android:defaultValue="false"
            android:key="path"
            android:summary="是否開啟追蹤路徑功能"
            android:title="路徑" />
    </PreferenceCategory>
</PreferenceScreen>