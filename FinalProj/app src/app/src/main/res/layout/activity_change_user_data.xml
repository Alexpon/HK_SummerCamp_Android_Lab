<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context="mbp.alexpon.com.login_register.ChangeUserData">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Name"
        android:id="@+id/change_tv1"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/register"
        android:layout_marginTop="46dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/change_name"
        android:layout_below="@+id/change_tv1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Age"
        android:id="@+id/change_tv2"
        android:layout_below="@+id/change_name"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:inputType="number"
        android:id="@+id/change_age"
        android:layout_below="@+id/change_tv2"/>

    <Button
        android:id="@+id/change_submit"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="#116493"
        android:text="Change"
        android:textSize="25dp"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/change_menu"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/change_menu"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="#116493"
        android:text="Menu"
        android:textSize="25dp"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
