<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mbp.alexpon.com.hkbike.RankActivity"
    android:background="@drawable/background2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rank"
        android:text="RANK"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"/>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rank"
        android:id="@+id/tableLayout">

        <TableRow android:layout_marginTop ="20sp"
            android:background="#dcffe497">
            <TextView
                android:layout_column="0"
                android:text="No."
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:gravity="center_vertical|center_horizontal"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ff000000" />
            <TextView
                android:layout_column="1"
                android:text="Username"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:gravity="center_vertical|center_horizontal"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ff000000" />
            <TextView
                android:layout_column="3"
                android:text="Age"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:gravity="center_vertical|center_horizontal"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ff000000" />
            <TextView
                android:layout_column="4"
                android:text="Distance"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:gravity="center_vertical|center_horizontal"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ff000000" />
        </TableRow>

        <TableRow android:layout_marginTop ="2sp"
            android:background="#dcfff7e0">
            <TextView
                android:layout_column="0"
                android:text="1"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/no1"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="1"
                android:text="user1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/username1"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="3"
                android:text="10"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/age1"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="3"
                android:text="0"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/distance1"
                android:gravity="center_vertical|center_horizontal" />
        </TableRow>

        <TableRow android:layout_marginTop ="2sp"
            android:background="#dcfff7e0">
            <TextView
                android:layout_column="0"
                android:text="2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10px"
                android:id="@+id/no2"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="1"
                android:text="user2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/username2"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="3"
                android:text="20"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/age2"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="3"
                android:text="0"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/distance2"
                android:gravity="center_vertical|center_horizontal" />
        </TableRow>

        <TableRow android:layout_marginTop ="2sp"
            android:background="#dcfff7e0">
            <TextView
                android:layout_column="0"
                android:text="3"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10px"
                android:id="@+id/no3"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="1"
                android:text="user3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/username3"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="3"
                android:text="30"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/age3"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="3"
                android:text="0"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/distance3"
                android:gravity="center_vertical|center_horizontal" />
        </TableRow>

        <TableRow android:layout_marginTop ="2sp"
            android:background="#dcfff7e0">
            <TextView
                android:layout_column="0"
                android:text="4"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10px"
                android:id="@+id/no4"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="1"
                android:text="user4"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/username4"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="3"
                android:text="40"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/age4"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="3"
                android:text="0"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/distance4"
                android:gravity="center_vertical|center_horizontal" />
        </TableRow>

        <TableRow android:layout_marginTop ="2sp"
            android:background="#dcfff7e0">
            <TextView
                android:layout_column="0"
                android:text="5"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10px"
                android:id="@+id/no5"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="1"
                android:text="user5"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/username5"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="3"
                android:text="50"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/age5"
                android:gravity="center_vertical|center_horizontal" />
            <TextView
                android:layout_column="3"
                android:text="0"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5px"
                android:id="@+id/distance5"
                android:gravity="center_vertical|center_horizontal" />
        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/rank_ok"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
